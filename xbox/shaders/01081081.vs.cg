void main(
  float4 aPosition : POSITION
, float4 aInput1 : COLOR0
, float4 aInput2 : COLOR1
, out float4 vPosition : POSITION
, out float4 vInput1 : COLOR0
, out float4 vInput2 : COLOR1
, uniform float4 uViewScale
, uniform float4 uViewOfs
) {
vInput1 = aInput1;
vInput2 = aInput2;
float4 pos = aPosition * uViewScale;
pos.xyz = pos.xyz / pos.w + uViewOfs.xyz;
vPosition = pos;
}

